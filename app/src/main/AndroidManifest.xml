<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.toyin.foodfly">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Authentication.SplashScreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Authentication.SignUp"
            android:label="@string/app_name">

        </activity>

        <activity android:name=".Tabs.Drinks"></activity>
        <activity android:name=".Tabs.Indegenious"></activity>
        <activity android:name=".Tabs.Foreign"></activity>
        <activity android:name=".Tabs.TableLayout">
        </activity>

        <activity
            android:name=".Item.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/app_name"
            >
        </activity>
        <activity
            android:name=".Authentication.Login"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name=".Tabs.Category"
            android:label="@string/app_name"
            android:theme="@style/MaterialDesign">
        </activity>

        <activity
            android:name=".Item.ItemDescription"
            android:theme="@style/AppTheme.NoActionBar"
            ></activity>

    </application>

</manifest>